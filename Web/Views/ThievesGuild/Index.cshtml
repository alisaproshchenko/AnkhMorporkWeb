@model Web.Models.ThievesGuild
@{
    ViewBag.Title = "Index";
}

<h2 class="messages">@Model.WelcomingMessage</h2>

<div class="container row ">
    <div class="col s6 decision">
        <label>What will you do?</label><br />
        <input class="btn waves-effect waves-light my-button" type="button" value="Give him money" onclick="location.href = '@Url.Action("Play", @Model)'" />
        <input class="btn waves-effect waves-light my-button" type="button" value="Run away" onclick="location.href = '@Url.Action("Kill", @Model)'" />
    </div>
    <div class="col s6">
        <img src="~/Content/EntitiesImages/thieves-guild-removebg-preview.png" alt="Mended Drum Pub Image" align="right" style="float: right;" />
    </div>
</div>
